#:kivy 2.0.0
#:set label_height 200
<RootWidget>
    expression: expr
    Label:
        id: expr
        font_size: 50
        bold: True
        size: root.width, label_height
        pos: 0, root.height - label_height
        text_size: self.size
        halign: 'right'
        valign: 'bottom'
        text: "100"

    GridLayout:
        cols:2
        size: root.width, (root.height - label_height) / 6
        pos: 0, (root.height - label_height) * 5 / 6
        GridLayout:
            cols:2
            Button:
                text: "C"
                on_press: root.handle_button(self)
            Button:
                text: "<-"
                on_press: root.handle_button(self)
        
        Button:
            text: "="
            on_press: root.handle_button(self)
        
    GridLayout:
        cols: 4
        size: root.width, (root.height - label_height) * 4 / 6
        pos: 0, (root.height - label_height) / 6

        Button:
            text: "+"
            on_press: root.handle_button(self)
        Button:
            text: "-"
            on_press: root.handle_button(self)
        Button:
            text: "*"
            on_press: root.handle_button(self)
        Button:
            text: "/"
            on_press: root.handle_button(self)
        Button:
            text: "7"
            on_press: root.handle_button(self)
        Button:
            text: "8"
            on_press: root.handle_button(self)
        Button:
            text: "9"
            on_press: root.handle_button(self)
        Button:
            text: "("
            on_press: root.handle_button(self)
        Button:
            text: "4"
            on_press: root.handle_button(self)
        Button:
            text: "5"
            on_press: root.handle_button(self)
        Button:
            text: "6"
            on_press: root.handle_button(self)
        Button:
            text: ")"
            on_press: root.handle_button(self)
        Button:
            text: "1"
            on_press: root.handle_button(self)
        Button:
            text: "2"
            on_press: root.handle_button(self)
        Button:
            text: "3"
            on_press: root.handle_button(self)
        Button:
            text: "âˆš"
            on_press: root.handle_button(self)
    GridLayout:
        cols:2
        size: root.width, (root.height - label_height) / 6
        Button:
            text: "0"
            on_press: root.handle_button(self)
        GridLayout:
            cols:2
            Button:
                text: "."
                on_press: root.handle_button(self)
            Button:
                text: "^"
                on_press: root.handle_button(self)
        